                android:layout_marginLeft="@dimen/marginLeft_editBox"/>

            <EditText
                android:id="@+id/joiningDate"
                android:layout_width="@dimen/editBox_width"
                android:layout_height="@dimen/editBox_height"
                android:textColorHint="@color/darkGray"
                android:layout_below="@+id/labelJoiningDate"
                android:gravity="left"
                android:layout_marginLeft="@dimen/marginLeft_editBox"
                android:editable="false"
                android:maxLines="1"/>
