            <TextView
                android:id="@+id/labelHobbies"
                android:layout_below="@+id/BloodGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hobbies"
                android:textSize="@dimen/editbox_textSize"
                android:layout_marginLeft="@dimen/marginLeft_editBox"
                android:layout_marginTop="@dimen/empid_top_from"/>

            <EditText
                android:id="@+id/Hobbies"
                android:layout_width="@dimen/editBox_width"
                android:layout_height="@dimen/editBox_height"
                android:textColorHint="@color/darkGray"
                android:layout_marginLeft="@dimen/marginLeft_editBox"
