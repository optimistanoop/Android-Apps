<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/viewpager" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">

        <TextView
            android:id="@+id/labelEmpId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empId"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/empid_top_from"/>

        <EditText
            android:id="@+id/empId"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_below="@+id/labelEmpId"
            android:maxLines="1" />


        <TextView
            android:id="@+id/labelFirstName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/firstName"
            android:layout_below="@+id/empId"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop=
                "@dimen/margin_top_textview"/>

        <EditText
            android:id="@+id/firstName"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelFirstName"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/labelLastName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lastName"
            android:layout_below="@+id/firstName"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/lastName"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelLastName"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/labelPermanentAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/permanentAddr"
            android:layout_below="@+id/lastName"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/permanentAddress"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelPermanentAddress"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1" />
        <TextView
            android:id="@+id/labelPresentAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/presentAddr"
            android:layout_below="@+id/permanentAddress"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/presentAddress"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelPresentAddress"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="5"
            />
        <TextView
            android:id="@+id/labelDesignation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/designation"
            android:layout_below="@+id/presentAddress"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/designation"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelDesignation"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/labelPersonalEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/personalEmail"
            android:layout_below="@+id/designation"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/personalEmail"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelPersonalEmail"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/labelProfessionalEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/professionalEmail"
            android:layout_below="@+id/personalEmail"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/professionalEmail"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/gray"
            android:layout_below="@+id/labelProfessionalEmail"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1">

        </EditText>

        <TextView
            android:id="@+id/labelContactNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/contactNumber"
            android:layout_below="@+id/professionalEmail"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>
        <EditText
            android:id="@+id/contactNumber"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/gray"
            android:layout_below="@+id/labelContactNumber"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1" />
        <TextView
            android:id="@+id/labelEmergencyNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/emergencyContNumber"
            android:layout_below="@+id/contactNumber"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:layout_marginTop="@dimen/margin_top_textview"/>

        <EditText
            android:id="@+id/emergencyNumber"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"

            android:textColorHint="@color/gray"
            android:layout_below="@+id/labelEmergencyNumber"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/labelJoiningDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/submissionDate"
            android:layout_below="@+id/emergencyNumber"
            android:textSize="@dimen/editbox_textSize"
            android:layout_marginLeft="@dimen/marginLeft_editBox"/>

        <EditText
            android:id="@+id/joiningDate"
            android:layout_width="@dimen/editBox_width"
            android:layout_height="@dimen/editBox_height"
            android:textColorHint="@color/darkGray"
            android:layout_below="@+id/labelJoiningDate"
            android:gravity="left"
            android:layout_marginLeft="@dimen/marginLeft_editBox"
            android:editable="false"
            android:maxLines="1"/>
        <Button
            android:id="@+id/submitButton"
            android:layout_width="@dimen/Button_width"
            android:layout_height="@dimen/Button_height"
            android:layout_below = "@+id/joiningDate"
            android:background="@color/gray"
            android:textColorHint="@color/white"
            android:layout_marginLeft="@dimen/Button_marginLeft"
            android:hint="@string/submit"
            android:gravity="center"
            android:onClick="validateUser"
            android:textSize="@dimen/button_textSize"
            android:layout_marginTop="@dimen/marginTop_editBox" />
    </RelativeLayout>
    </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view"/>
</android.support.v4.widget.DrawerLayout>



