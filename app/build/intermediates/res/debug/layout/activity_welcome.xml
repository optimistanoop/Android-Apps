<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cerrid_logo"
        android:clickable="true"
        tools:context=".MainActivity"
        tools:ignore="MergeRootFrame"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WelcomePage_heading"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/marginTop_welcomePageText"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/textsize_in_welcomepage"
        android:gravity="center"/>
    <Button
        android:id="@+id/loginButton"
        android:layout_width="@dimen/loginbutton_width"
        android:layout_height="@dimen/loginbutton_height"
        android:text="@string/login_button_text"
        android:layout_below="@+id/heading"
        android:layout_marginTop="@dimen/margintop_loginbutton_welcomepage"
        android:gravity="center"
        android:onClick="gotoLoginPage"
        android:layout_marginLeft="@dimen/loginbutton_marginleft"/>
    </RelativeLayout><!-- From: file:/home/anoop/AndroidStudioProjects/cUtil-2015-08-27/cUtil/app/src/main/res/layout/activity_welcome.xml -->