<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:scaleType="fitXY"
        android:src="@drawable/header" />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:text="Order Status" android:textStyle="bold" android:textSize="24dip"
        android:layout_below="@id/header" android:gravity="center"
        android:textColor="@color/deepskyeblue" />

    <TextView
        android:id="@+id/orderStatusText"
        android:layout_width="@dimen/editbox_width"
        android:layout_height="@dimen/editbox_height"
        android:layout_marginTop="50dp" android:textSize="22dip"

        android:layout_below="@+id/orderStatus"
        android:background="@color/grey1"  android:layout_marginLeft="20dp"
        android:gravity="center" android:text="Ongoing"

        />

</RelativeLayout>
